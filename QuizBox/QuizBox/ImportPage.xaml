<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizBox.ImportPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:helpers="clr-namespace:QuizBox.Helpers"
             Title="ImportPage">

        <ContentPage.Behaviors>
            <toolkit:StatusBarBehavior
            StatusBarStyle="LightContent"
            StatusBarColor="Transparent"
        />
        </ContentPage.Behaviors>

    <Grid Padding="0,0,0,0">
        <Image
            Source="background.jpg"
            Aspect="AspectFill"
            IsVisible="True"
            Grid.RowSpan="2" />

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Border 
            StrokeThickness="0"
            StrokeShape="RoundRectangle 25,25,25,25"
            BackgroundColor="{StaticResource RichBlack}"
            Grid.Row="0"
            Padding="25"
            HorizontalOptions="Fill">

            <Border.Margin>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="Android" Value="25,65,25,0"/>
                    <On Platform="iOS" Value="25,113,25,0"/>
                    <On Platform="WinUI" Value="25,25,25,0" />
                </OnPlatform>
            </Border.Margin>

            <Grid RowDefinitions="Auto,*">
                <Label
                    Text="Import Quiz"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Margin="0,0,0,12"/>

                <Frame
                    x:Name="importQuizFrame"
                    Padding="12"
                    Margin="10"
                    BackgroundColor="#2196F3"
                    BorderColor="#1976D2"
                    CornerRadius="12"
                    HasShadow="True"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    Grid.Row="1">
                    <Grid
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Center">
                        <VerticalStackLayout
                            Spacing="8"
                            VerticalOptions="Center"
                            HorizontalOptions="Center">
                            <Label
                                FontFamily="MaterialDesignIcons"
                                Text="{x:Static helpers:MaterialDesignIconsFonts.Import}"
                                FontSize="24"
                                TextColor="White"
                                HorizontalOptions="Center"
                                VerticalOptions="Center" />

                            <Label
                                Text="Import Quiz from the device"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextColor="White"
                                HorizontalOptions="Center"
                                VerticalOptions="Center" />
                        </VerticalStackLayout>

                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="onImportQuiz" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>
            </Grid>
        </Border>

        <AbsoluteLayout Grid.Row="1" Margin="25">
                <Button
                    x:Name="backBtn"
                    WidthRequest="50"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="onGoBack"
                    FontSize="30"
                    Padding="0"
                    FontFamily="MaterialDesignIcons" 
                    Text="{x:Static helpers:MaterialDesignIconsFonts.ArrowLeft}"
                >
                </Button>
            </AbsoluteLayout>
        </Grid>
    </ContentPage>
