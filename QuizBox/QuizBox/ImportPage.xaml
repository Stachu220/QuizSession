<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizBox.ImportPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:helpers="clr-namespace:QuizBox.Helpers"
             Title="ImportPage">

        <ContentPage.Behaviors>
            <toolkit:StatusBarBehavior
            StatusBarStyle="LightContent"
            StatusBarColor="Transparent"
        />
        </ContentPage.Behaviors>

    <Grid Padding="0,0,0,0">
        <Image
            Source="background9.jpg"
            Rotation="180"
            Aspect="AspectFill"
            IsVisible="True"
            Grid.RowSpan="2" />

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Border 
            StrokeThickness="0"
            StrokeShape="RoundRectangle 25,25,25,25"
            BackgroundColor="{StaticResource RichBlack}"
            Grid.Row="0"
            Padding="25"
            HorizontalOptions="Fill">

            <Border.Margin>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="Android" Value="25,65,25,0"/>
                    <On Platform="iOS" Value="25,113,25,0"/>
                    <On Platform="WinUI" Value="25,25,25,0" />
                </OnPlatform>
            </Border.Margin>

            <Grid RowDefinitions="Auto,*">
                <Label
                    Text="Import Quiz"
                    FontSize="24"
                    FontAttributes="Bold"
                    FontFamily="Ubuntu-Bold"
                    TextColor="White"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Margin="0,0,0,12"/>

                <Border
                    x:Name="importQuizBtnBorder"
                    Padding="12"
                    Margin="10"
                    StrokeThickness="5"
                    BackgroundColor="{StaticResource RichBlack}"
                    StrokeShape="RoundRectangle 10,10,10,10"
                    StrokeDashArray="1,1"
                    StrokeDashOffset="5"
                    Stroke="{StaticResource PictonBlue}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    Grid.Row="1">
                    <Grid
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Center">
                        <VerticalStackLayout
                            VerticalOptions="Center"
                            Spacing="0"
                            HorizontalOptions="Center">
                            <Label
                                x:Name="iconLabel"
                                FontFamily="MaterialDesignIcons"
                                Text="{x:Static helpers:MaterialDesignIconsFonts.CloudArrowUp}"
                                FontSize="96"
                                TextColor="{StaticResource PictonBlue}"
                                Margin="0,0,0,16"
                                HorizontalOptions="Center"
                                VerticalOptions="Center" />

                            <Label
                                x:Name="text1"
                                Text="Import Quiz"
                                FontFamily="Ubuntu-Bold"
                                FontSize="20"
                                FontAttributes="Bold"
                                TextColor="{StaticResource PictonBlue}"
                                Margin="0"
                                HorizontalOptions="Center"
                                VerticalOptions="Center" />
                            
                            <Label
                                x:Name="text2"
                                Text="from the device"
                                FontFamily="Ubuntu-Regular"
                                FontSize="16"
                                TextColor="{StaticResource PictonBlue}"
                                HorizontalOptions="Center"
                                VerticalOptions="Center" 
                                Margin="0,0,0,2"/>
                            
                            <Label
                                Text="(File extensions allowed: JSON)"
                                x:Name="text3"
                                FontSize="12"
                                FontFamily="Ubuntu-Light"
                                FontAttributes="Bold"
                                TextColor="{StaticResource PictonBlue}"
                                HorizontalOptions="Center"
                                VerticalOptions="Center" />
                        </VerticalStackLayout>
                    </Grid>

                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="onImportQuiz" />
                    </Border.GestureRecognizers>
                </Border>
            </Grid>
        </Border>

        <AbsoluteLayout Grid.Row="1" Margin="25">
                <Button
                    x:Name="backBtn"
                    WidthRequest="50"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    BackgroundColor="{StaticResource PictonBlue}"
                    Background="{StaticResource PictonBlue}"
                    TextColor="White"
                    VerticalOptions="Center"
                    Clicked="onGoBack"
                    FontSize="30"
                    Padding="0"
                    FontFamily="MaterialDesignIcons" 
                    BorderWidth="0"
                    CornerRadius="12"
                    MinimumHeightRequest="50"
                    MinimumWidthRequest="50"
                    Text="{x:Static helpers:MaterialDesignIconsFonts.ArrowLeft}"
                >
                </Button>
            </AbsoluteLayout>
        </Grid>
    </ContentPage>
