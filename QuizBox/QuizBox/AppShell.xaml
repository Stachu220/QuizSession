<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuizBox.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QuizBox"
    Shell.FlyoutBehavior="Disabled"
    Title="QuizBox">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Quiz Creator"
        ContentTemplate="{DataTemplate local:QuizCreatorPage}"
        Route="QuizCreatorPage" />

    <ShellContent
        Title="Quiz List"
        ContentTemplate="{DataTemplate local:QuizListPage}"
        Route="QuizListPage" />
    
    <ShellContent
        Title="Import"
        ContentTemplate="{DataTemplate local:ImportPage}"
        Route="ImportPage" />

    <ShellContent
        Title="Question Creator"
        ContentTemplate="{DataTemplate local:QuestionCreatorPage}"
        Route="QuestionCreatorPage" />

    <ShellContent
        Title="Quiz Start Page"
        ContentTemplate="{DataTemplate local:QuizStartPage}"
        Route="QuizStartPage" />

</Shell>
