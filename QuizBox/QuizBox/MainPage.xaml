<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizBox.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="WELCOME TO QUIZ BOX!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="goToQuizListBtn"
                Text="Quiz List" 
                Clicked="goToQuizList"
                HorizontalOptions="Fill" />

            <Button
                x:Name="goToQuizCreatorBtn"
                Text="Quiz Creator" 
                Clicked="goToQuizCreator"
                HorizontalOptions="Fill" />

            <Button
                x:Name="goToImportBtn"
                Text="Import" 
                Clicked="goToImport"
                HorizontalOptions="Fill" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
