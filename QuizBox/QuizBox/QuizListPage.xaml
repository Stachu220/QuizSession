<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizBox.QuizListPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:helpers="clr-namespace:QuizBox.Helpers"
             Title="QuizListPage">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior
            StatusBarStyle="LightContent"
            StatusBarColor="Transparent"
        />
    </ContentPage.Behaviors>

    <Grid Padding="0,0,0,0">
        <Image
            Source="background.jpg"
            Aspect="AspectFill"
            IsVisible="True"
            Grid.RowSpan="2" />

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border StrokeThickness="0"
                StrokeShape="RoundRectangle 25,25,25,25"
                BackgroundColor="{StaticResource RichBlack}"
                Grid.Row="0"
                Padding="25"
                HorizontalOptions="Fill">

            <Border.Margin>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="Android" Value="25,65,25,0"/>
                    <On Platform="iOS" Value="25,113,25,0"/>
                    <On Platform="WinUI" Value="25,25,25,0" />
                </OnPlatform>
            </Border.Margin>

            <Grid RowDefinitions="Auto,*">
                <!-- Header label, left-aligned -->
                <Label
                    Text="Quiz List"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Margin="0,0,0,12"/>
                <!-- Quiz list content in row 1 -->
                <ScrollView Grid.Row="1"
                            VerticalOptions="FillAndExpand"
                            Loaded="ScrollView_Loaded">
                    <StackLayout x:Name="QuizListStack" Padding="10">
                        <!-- Quiz items will be added here dynamically -->
                    </StackLayout>
                </ScrollView>
            </Grid>
        </Border>

        <AbsoluteLayout Grid.Row="1" Margin="25">
            <Button
                x:Name="GoBack"
                WidthRequest="50"
                HeightRequest="50"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="onGoBack"
                FontSize="30"
                Padding="0"
                FontFamily="MaterialDesignIcons" 
                Text="{x:Static helpers:MaterialDesignIconsFonts.ArrowLeft}"
            >
            </Button>
        </AbsoluteLayout>
    </Grid>
</ContentPage>
